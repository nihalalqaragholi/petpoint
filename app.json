{
  "expo": {
    "name": "PetPoint",
    "slug": "petpoint",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/petpoint-icon.png",
    "scheme": "myapp",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "bundleIdentifier": "com.petpoint.app",
      "supportsTablet": true,
      "infoPlist": {
        "NSPhotoLibraryUsageDescription": "We need access to your photo library to let you pick product images."
      }
    },
    "android": {
      "package": "com.petpoint.app",
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/petpoint-icon.png",
        "backgroundColor": "#C0DC17"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "bundler": "metro",
      "output": "single",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/petpoint-splash.jpg",
          "imageWidth": 280,
          "resizeMode": "contain",
          "backgroundColor": "#C0DC17"
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "We need access to your photo library to let you pick product images.",
          "cameraPermission": "We need access to your camera if you decide to take a new product photo."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "d478284f-31ba-4d90-a997-fa2d5c698930"
      }
    }
  }
}
